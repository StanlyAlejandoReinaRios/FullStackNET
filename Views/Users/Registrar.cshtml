@model NetFullStack.DAL.Entities.DTO_S.Usuarios;

<form asp-action="Registrar">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
  <div class="mb-3">
    <label asp-for="Correo" class="form-label">Correo</label>
    <input type="email" asp-for="Correo" class="input-crear form-control">
    <span asp-validation-for="Correo" class="text-danger"></span>
  </div>
  <div class="mb-3">
    <label asp-for="Password" class="form-label">Contraseña</label>
    <input type="password" asp-for="Password" class="form-control" id="exampleInputPassword1">
    <span asp-validation-for="Password" class="text-danger"></span>
  </div>
    <div class="mb-3">
    <label asp-for="RepeatPassword" class="form-label">Repetir Contraseña</label>
    <input type="password" asp-for="RepeatPassword" class="form-control" id="exampleInputPassword1">
    <span asp-validation-for="RepeatPassword" class="text-danger"></span>
  </div>
  <button type="submit" class="btn btn-primary">Guardar</button>

</form>

@section Scripts{
    @{
        await Html.PartialAsync("_ValidationScriptsPartial");
    }
}


